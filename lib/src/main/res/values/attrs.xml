    </declare-styleable>

    <!-- 只是为了有提示 -->
    <declare-styleable name="RoundLinearLayout">
        <attr name="rRadius" />
        <attr name="rLeftRadius" />
        <attr name="rRightRadius" />
        <attr name="rTopRadius" />
        <attr name="rBottomRadius" />
        <attr name="rTopLeftRadius" />
        <attr name="rTopRightRadius" />
        <attr name="rBottomLeftRadius" />
        <attr name="rBottomRightRadius" />
        <attr name="rStrokeWidth" />
        <attr name="rStrokeColor" />
        <attr name="rNewLayer" />
    </declare-styleable>

    <declare-styleable name="RoundRelativeLayout">
        <attr name="rRadius" />
        <attr name="rLeftRadius" />
        <attr name="rRightRadius" />
        <attr name="rTopRadius" />
        <attr name="rBottomRadius" />
        <attr name="rTopLeftRadius" />
        <attr name="rTopRightRadius" />
        <attr name="rBottomLeftRadius" />
        <attr name="rBottomRightRadius" />
        <attr name="rStrokeWidth" />
        <attr name="rStrokeColor" />
        <attr name="rNewLayer" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="rRadius" />
        <attr name="rLeftRadius" />
        <attr name="rRightRadius" />
        <attr name="rTopRadius" />
        <attr name="rBottomRadius" />
        <attr name="rTopLeftRadius" />
        <attr name="rTopRightRadius" />
        <attr name="rBottomLeftRadius" />
        <attr name="rBottomRightRadius" />
        <attr name="rStrokeWidth" />
        <attr name="rStrokeColor" />
